{
  "$id": "https://example.com/person.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "subject": {
      "format": "email",
      "type": "string",
      "kratos": {
        "credentials": {
          "password": {
            "identifier": true
          }
        }
      }
    },
    "name": {
      "type": "string",
      "minLength": 2
    }
  },
  "required": [
    "subject"
  ],
  "additionalProperties": false
}